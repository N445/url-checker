{% extends 'base.html.twig' %}

{% block title %}Site{% endblock %}

{% block body %}
    <h1>Site</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ site.id }}</td>
            </tr>
            <tr>
                <th>Protocol</th>
                <td>{{ site.protocol }}</td>
            </tr>
            <tr>
                <th>Domaine</th>
                <td>{{ site.domain }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>
                    <ul>
                        {% for url in site.urls %}
                            <li><a href="{{ site.protocol }}://{{ site.domain }}{{ url.url }}" target="_blank">{{ url.url }}</a> <span class="badge badge-dark">{{ url.code }}</span></li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('SITE_INDEX') }}" class="btn btn-primary">Retour</a>

    <a href="{{ path('SITE_EDIT', {'id': site.id}) }}" class="btn btn-success">Modifier</a>

    {{ include('site/_delete_form.html.twig') }}
{% endblock %}
