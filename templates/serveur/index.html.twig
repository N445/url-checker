{% extends 'base.html.twig' %}

{% block title %}Liste des serveurs{% endblock %}

{% block body %}
    <h1>Liste des serveurs</h1>
    <p>
        <a href="{{ path('SERVEUR_NEW') }}" class="btn btn-success">Nouveau</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Ip</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for serveur in serveurs %}
            <tr>
                <td>{{ serveur.name }}</td>
                <td>{{ serveur.ip }}</td>
                <td>
                    <a href="{{ path('SERVEUR_SHOW', {'id': serveur.id}) }}" class="btn btn-sm btn-info">Voir</a>
                    <a href="{{ path('SERVEUR_EDIT', {'id': serveur.id}) }}" class="btn btn-sm btn-info">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <p>
        <a href="{{ path('SERVEUR_NEW') }}" class="btn btn-success">Nouveau</a>
    </p>
{% endblock %}
